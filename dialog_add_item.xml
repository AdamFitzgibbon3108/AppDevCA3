<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Goal Title Input Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal Title"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#333333" />

        <EditText
            android:id="@+id/goalTitleField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Goal Title"
            android:inputType="text"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:elevation="2dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Goal Description Input Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal Description"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#333333" />

        <EditText
            android:id="@+id/goalDescriptionField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Goal Description"
            android:inputType="textMultiLine"
            android:minHeight="80dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:elevation="2dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Goal Date Input Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal Date"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#333333" />

        <EditText
            android:id="@+id/goalDateField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Goal Date (e.g. YYYY-MM-DD)"
            android:inputType="date"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:elevation="2dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
